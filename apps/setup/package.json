{
    "name": "@tuum/setup",
    "version": "0.1.0",
    "type": "module",
    "private": true,
    "packageManager": "pnpm@9.15.0",
    "scripts": {
        "dev": "bun run src/index.ts",
        "test": "bun test",
        "build": "bun build src/index.ts --compile --outfile dist/tuum-setup",
        "build:all": "bun run build:macos && bun run build:windows",
        "build:macos": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/tuum-setup-macos",
        "build:windows": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/tuum-setup-win.exe"
    },
    "dependencies": {
        "open": "^10.1.0",
        "prompts": "^2.4.2",
        "kleur": "^4.1.5",
        "ora": "^8.0.1"
    },
    "devDependencies": {
        "@types/bun": "^1.1.0",
        "@types/prompts": "^2.4.9"
    }
}